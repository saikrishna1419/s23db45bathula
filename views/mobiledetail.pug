extends layout

block content
    h1= title
    - let mobileid = toShow._id
    - let productName = toShow.productName
    - let brand = toShow.brand
    - let price = toShow.price
    div
        div.row
            div(class='mobileAttr mr-3') Mobile ID is:  #{mobileid}
        div.row
            div(class='mobileAttr mr-3') Mobile Name is:  #{productName}
        div.row
            div(class='mobileAttr mr-3') Mobile Brand is:  #{brand}
        div.row
            div(class='mobileAttr mr-3') Mobile price is:  #{price}

