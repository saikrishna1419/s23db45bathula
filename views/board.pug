extends layout

block content
  h1= title
  p Rows: #{query.rows}
  p Cols: #{query.cols}

  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  - if(!Number.isInteger(rows) || !Number.isInteger(cols))
    p Rows and Cols must be integers.
  - else if (rows < 1 || rows > 10)
    p Rows must be between 1 and 10.
  - else if(cols < 1 || cols > 10)
    p Cols must be between 1 and 10.
  - else
    table#outer
        - for(let i = 0; i<rows; i++){
          tr#middle
            - for(let j = 0; j < cols; j++){
                - if (i === j)
                  td= 1
                - else if (i===j+1)
                  td= 2
                - else if (i === j -1)
                  td= i
                - else 
                  td= 0
            - }
        - }
  br
  a(href="/") Home